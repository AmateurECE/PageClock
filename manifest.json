{
    "manifest_version": 2,

    "name": "PageClock",
    "version": "0.0.1",
    "description": "Tracks the amount of time spent on certain websites.",

    "browser_action": {
	"default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ]
}
