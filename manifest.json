{
    "manifest_version": 2,

    "name": "PageClock",
    "version": "0.0.1",
    "description": "Tracks the amount of time spent on certain websites.",

    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },

    "browser_action": {
	"default_popup": "popup.html"
    },

    "background": {
        "page": "background.html",
        "persistent": false
    },

    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ]
}
