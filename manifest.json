{
    "manifest_version": 2,

    "name": "PageClock",
    "version": "0.0.1",
    "description": "Tracks the amount of time spent on certain websites.",

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "browser_action": {
	"default_popup": "popup.html"
    },

    "background": {
        "scripts": [
            "Debugger.js",
            "Timer.js",
            "PageClock.js"
        ],
        "persistent": false
    },

    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ]
}
